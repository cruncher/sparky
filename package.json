{
  "name": "sparky",
  "title": "Sparky",
  "description": "Sparky is a live data-binding controller who wires up HTML templates with template tags, composeable includes, functional views and a DOM renderer that batches updates to the browser frame rate.",
  "version": "3.1.2",
  "homepage": "http://github.com/cruncher/sparky",
  "author": {
    "name": "Stephen Band",
    "twitter": "stephband"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cruncher/sparky.git"
  },
  "keywords": [
    "javascript",
    "browser"
  ],
  "bugs": {
    "url": "https://github.com/cruncher/sparky/issues"
  },
  "licenses": [
    {
      "type": "MIT"
    }
  ],
  "devDependencies": {
    "rollup": "^1.27.9",
    "eslint": "^6.5.1",
    "node-sass": "^4.13.0",
    "puppeteer": "^1.20.0"
  },
  "module": "module.js",
  "main": "index.js",
  "scripts": {
    "lint": "eslint modules/*.js",
    "build": "npm run build-cjs && npm run build-esm",
    "build-cjs": "rollup module.js --o index.js --f cjs",
    "build-esm": "rollup module.js --o package.js --f esm",
        "build-docs": "node ../fn/render-html.js http://localhost/sparky/template.html ./index.html 8 && git add index.html",
        "sass": "node-sass --output-style compact --indent-type tab --indent-width 1 -o css css/respond.scss"
  }
}
